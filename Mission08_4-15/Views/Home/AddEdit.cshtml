@* Add/Edit Task form. TaskItemId == 0 means Add, otherwise Edit. *@
@model Mission08_4_15.Models.TaskItem

@{
    ViewData["Title"] = Model.TaskItemId == 0 ? "Add Task" : "Edit Task";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddEdit" method="post">
            @* Hidden fields: TaskItemId for add vs edit, Completed preserved on edit *@
            <input type="hidden" asp-for="TaskItemId"/>
            <input type="hidden" asp-for="Completed"/>

            @* Task description - required *@
            <div class="mb-3">
                <label asp-for="Task" class="form-label"></label>
                <input asp-for="Task" class="form-control"/>
                <span asp-validation-for="Task" class="text-danger"></span>
            </div>

            @* Due date - optional *@
            <div class="mb-3">
                <label asp-for="DueDate" class="form-label"></label>
                <input asp-for="DueDate" type="date" class="form-control"/>
            </div>

            @* Quadrant - required (Covey's 4 quadrants) *@
            <div class="mb-3">
                <label asp-for="Quadrant" class="form-label"></label>
                <select asp-for="Quadrant" class="form-select">
                    <option value="">-- Select Quadrant --</option>
                    <option value="1">Quadrant 1: Important / Urgent</option>
                    <option value="2">Quadrant 2: Important / Not Urgent</option>
                    <option value="3">Quadrant 3: Not Important / Urgent</option>
                    <option value="4">Quadrant 4: Not Important / Not Urgent</option>
                </select>
                <span asp-validation-for="Quadrant" class="text-danger"></span>
            </div>

            @* Category dropdown - populated from database (Home, School, Work, Church) *@
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))">
                    <option value="">-- Select Category --</option>
                </select>
            </div>

            @* Form actions *@
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Quadrants" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@* Client-side validation (jQuery Validate + unobtrusive) *@
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}